---
const pathname = Astro.url.pathname;
const isSpanish = pathname.startsWith("/es");
const homeHref = isSpanish ? "/es/" : "/";
---

<header class="header">
  <div class="container">
    <nav class="header__nav">
      <div class="header__logo">
        <a href={homeHref} class="header__logo-link">
          <img
            src="/icons/logo.svg"
            alt="portfolio"
            class="header__logo-image"
          />
        </a>
      </div>

      <div class="header__menu">
        <a href="#menu-toggle" class="header__burger"> </a>
        <div class="header__menu-wrapper" id="menu-toggle">
          <div class="header__menu-logo">
            <img
              src="/icons/logo.svg"
              alt="portfolio"
              class="header__menu-logo-image"
            />
          </div>
          <ul class="header__menu-list">
            <li>
              <a href={`${homeHref}#gallery`} class="header__menu-link"
                >Gallery</a
              >
            </li>
            <li>
              <a href={`${homeHref}#artist-bio`} class="header__menu-link"
                >Artist Bio</a
              >
            </li>
            <li>
              <a href={`${homeHref}#contact-us`} class="header__menu-link"
                >Contact us</a
