---
import ImageModal from "./ImageModal/ImageModal.astro";

interface Props {
  image: any;
  translations: {
    additionalDetailsTitle: string;
    footerTitle: string;
    footerText: string;
    footerLinkText: string;
    footerContactTitle: string;
    footerContactText: string;
    footerCopyright: string;
  };
  galleryLink: string;
}

const { image, translations, galleryLink } = Astro.props;
---

<main class="artwork-detail">
  <div class="artwork-detail__container">
    <div class="artwork-detail__wrapper">
      <div class="artwork-detail__main-image">
        <img
          src={`${import.meta.env.BASE_URL}${image.src}`}
          alt={image.alt}
          class="artwork-detail__image"
          data-src-original={`${import.meta.env.BASE_URL}${(image as any).srcOriginal || image.src}`}
          onclick="openModal(this)"
        />
      </div>

      <div class="artwork-detail__wrapper-title">
        <h1 class="artwork-detail__title">{image.alt}</h1>
        {
          image.description && (
            <p class="artwork-detail__description">{image.description}</p>
          )
        }
        {image.medium && <p class="artwork-detail__medium">{image.medium}</p>}
        {image.size && <p class="artwork-detail__size">{image.size}</p>}
        {image.price && <p class="artwork-detail__price">{image.price}</p>}

        {
          image.additionalPhotos && image.additionalPhotos.length > 0 && (
            <div class="artwork-detail__additional-photos">
              <h2 class="artwork-detail__additional-title">
                {translations.additionalDetailsTitle}
              </h2>
              <div class="artwork-detail__gallery">
                {image.additionalPhotos.map((photo: any) => (
                  <div class="artwork-detail__gallery-item">
                    <img
                      src={`${import.meta.env.BASE_URL}${photo.src}`}
                      alt={photo.alt}
                      class="artwork-detail__gallery-image"
                      data-src-original={`${import.meta.env.BASE_URL}${photo.src}`}
                      onclick="openModal(this)"
                    />
                  </div>
                ))}
              </div>
            </div>
          )
        }
      </div>
    </div>
  </div>

  <footer class="artwork-detail__footer">
    <div class="artwork-detail__footer-container">
      <div class="artwork-detail__footer-content">
        <div class="artwork-detail__footer-section">
          <h3 class="artwork-detail__footer-title">
            {translations.footerTitle}
          </h3>
          <p class="artwork-detail__footer-text">
            {translations.footerText}
          </p>
          <a href={galleryLink} class="artwork-detail__footer-link">
            {translations.footerLinkText}
          </a>
        </div>

        <div class="artwork-detail__footer-section">
          <h3 class="artwork-detail__footer-title">
            {translations.footerContactTitle}
          </h3>
          <p class="artwork-detail__footer-text">
            {translations.footerContactText}
          </p>
          <div class="artwork-detail__footer-social">
            <a
              href="https://www.instagram.com/romanska13?igsh=MXcxdGticmZvd3Y4bQ=="
              target="_blank"
              rel="noopener noreferrer"
              class="artwork-detail__footer-social-link"
              aria-label="Instagram"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                ></path>
              </svg>
            </a>
            <a
              href="mailto:iryromanska@gmail.com"
              class="artwork-detail__footer-social-link"
              aria-label="Email"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="artwork-detail__footer-bottom">
        <p class="artwork-detail__footer-copyright">
          {translations.footerCopyright}
        </p>
      </div>
    </div>
  </footer>
</main>

<ImageModal imageData={image} />
